<div class="panel-header">
  <svg class="feather-icon">
    <use xlink:href="feather-sprite.svg#file-text" />
  </svg>
  <h1>Document</h1>
  <svg class="feather-icon">
    <use xlink:href="feather-sprite.svg#x" />
  </svg>
</div>
<hr>


  
<label class="label has-text-grey">View:</label>

<ul>
  <li>
    <a class="button has-icon is-primary select-pill-left">
      <svg class="feather-icon  smaller">
        <use xlink:href="feather-sprite.svg#feather" />
      </svg>Write
    </a>
  </li>
  <li>
    <a class="button is-white select-pill-right">
      <svg class="feather-icon smaller">
        <use xlink:href="feather-sprite.svg#file-text" />
      </svg>
      Preview
    </a>
  </li>
</ul>


<label class="label has-text-grey">Template:</label>


<button class="button is-primary is-fullwidth">Change Template</button>


<label class="label has-text-grey">Export:</label>

<ul>
  <div style="flex:50%">
    <li>
      <input type="radio" name="export" value="pdf" checked>
      <label class="container">PDF</label>
    </li>

    <li>
      <input type="radio" name="export" value="docx">
      <label class="container">DOCX</label>
    </li>
  </div>
  <div style="flex:50%">
    <li>
      <input type="radio" name="export" value="latex">
      <label class="container">LATEX</label>
    </li>
    <li>
      <input type="radio" name="export" value="html">
      <label class="container">HTML</label>
    </li>
  </div>
</ul>

<button class="button is-primary  is-fullwidth">Export</button>






